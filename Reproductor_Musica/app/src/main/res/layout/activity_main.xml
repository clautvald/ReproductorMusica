<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="FB" />

        <Button
            android:id="@+id/bbtn_spotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="SPOTIFY" />

        <Button
            android:id="@+id/btn_goog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="GOOGLE+" />

    </LinearLayout>
      <EditText
        android:id="@+id/txt_correo"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:ems="10"
        android:gravity="center"
          android:layout_gravity="center"
        android:hint="Ingresa tu correo electrónico"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txt_contras"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingresa tu contraseña"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/registro"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.02"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:text="Registrar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.04"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="Crear cuenta"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_cotra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Olvide Contraseña"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>